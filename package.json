{
    "scripts": {
        "init": "pnpm install",
        "check-outdated": "pnpm outdated --recursive",
        "upgrade": "pnpx npm-upgrade@latest && pnpm run init",
        "update": "pnpm update --recursive",
        "clean": "nx run-many --target clean --tuiAutoExit",
        "build": "nx run-many --target build,test --tuiAutoExit",
        "test": "nx run-many --target test --tuiAutoExit"
    },
    "engines": {
        "node": ">= 20"
    },
    "packageManager": "pnpm@10.15.0",
    "devDependencies": {
        "nx": "21.4.1"
    }
}
