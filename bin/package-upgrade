#!/usr/bin/env sh

# Upgrades the dependencies of the packages.
#
# EXAMPLE
# ./package-upgrade ./packages/@downforce/*

set -e # errexit
set -u # nounset

case "$(dirname "$0")" in
    /*|./*) Dir=$(cd "$(dirname "$0")" && pwd);;
    *) Dir=$(cd "$PWD/$(dirname "$0")" && pwd);;
esac

: ${NpmUpgrade:=pnpx npm-upgrade}
: ${NpmUpgradeArgs:=}

for pkg; do
    if test ! -e "$pkg/package.json"; then
        echo "skipping invalid package '$pkg'."
        continue
    fi

    (
        case "$pkg" in
            /*|./*) cd "$pkg";;
            *) cd "$PWD/$pkg";;
        esac

        set -- $NpmUpgradeArgs
        $NpmUpgrade "$@"
    )
done
